<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_farm"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/farm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/farm_rabbits_title"

            android:textColor="@color/black"
            android:textSize="@dimen/title_txt_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_to_menu"
            android:layout_width="@dimen/farm_btn_to_menu_size"
            android:layout_height="@dimen/farm_btn_to_menu_size"

            android:layout_margin="30dp"

            android:background="@drawable/ic_to_menu"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_rabbits"
            android:layout_width="@dimen/farm_btn_width"
            android:layout_height="@dimen/standard_btn_height"

            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"

            android:insetTop="0dp"
            android:insetBottom="0dp"

            android:backgroundTint="@color/btn_rabbits_passive"

            android:text="@string/farm_rabbits_btn_rabbits"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/standard_txt_size"

            app:layout_constraintTop_toBottomOf="@+id/farm_title"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_cages"
            android:layout_width="@dimen/farm_btn_width"
            android:layout_height="@dimen/standard_btn_height"

            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"

            android:insetTop="0dp"
            android:insetBottom="0dp"

            android:backgroundTint="@color/btn_cages_passive"

            android:text="@string/farm_rabbits_btn_cages"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/standard_txt_size"

            app:layout_constraintTop_toBottomOf="@+id/farm_title"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/str_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"

            android:text="@string/farm_rabbits_txt_sort"
            android:textColor="@color/black"
            android:textSize="@dimen/standard_txt_size"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_rabbits" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="@dimen/farm_btn_width"
            android:layout_height="@dimen/standard_spinner_height"

            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"

            android:backgroundTint="@color/black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_cages" />

        <LinearLayout
            android:id="@+id/farm_title_of_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/str_sort">

            <TextView
                android:id="@+id/farm_title_of_list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="@string/farm_rabbits_txt_number_of_cage"
                android:textColor="@color/black"

                android:textSize="@dimen/small_txt_size" />

            <TextView
                android:id="@+id/farm_title_of_list_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="@string/farm_rabbits_txt_age"
                android:textColor="@color/black"

                android:textSize="@dimen/small_txt_size" />

            <TextView
                android:id="@+id/farm_title_of_list_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="@string/farm_rabbits_txt_gender"
                android:textColor="@color/black"

                android:textSize="@dimen/small_txt_size" />

            <TextView
                android:id="@+id/farm_title_of_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:text="@string/farm_rabbits_txt_type"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/farm_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2"

        app:layout_constraintTop_toBottomOf="@+id/menu_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsPanel"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonsPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_cage_is_repaired"
            android:layout_width="0sp"
            android:layout_height="30dp"

            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"

            android:text="Клетка отремонтирована"
            android:textAllCaps="false"
            android:textSize="@dimen/very_small_txt_size"

            app:layout_constraintEnd_toStartOf="@+id/btn_cage_need_repaired"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_cage_is_cleaned"
            android:layout_width="0dp"
            android:layout_height="30dp"

            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"

            android:text="Клетка убрана"
            android:textAllCaps="false"
            android:textSize="@dimen/very_small_txt_size"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_cage_need_cleaned"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_cage_is_repaired" />

        <Button
            android:id="@+id/btn_cage_need_repaired"
            android:layout_width="0dp"
            android:layout_height="30dp"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/standard_margin"

            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"

            android:text="Клетка отремонтирована"
            android:textAllCaps="false"
            android:textSize="@dimen/very_small_txt_size"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_cage_is_repaired"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_cage_need_cleaned"
            android:layout_width="0dp"
            android:layout_height="30dp"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="10dp"

            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"

            android:text="Клетка убрана"
            android:textAllCaps="false"
            android:textSize="@dimen/very_small_txt_size"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_cage_is_cleaned"
            app:layout_constraintTop_toBottomOf="@+id/btn_cage_need_repaired" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rabbit_more_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="gone">

        <ImageView
            android:id="@+id/blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            android:src="@drawable/ic_blur"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="@dimen/standard_margin"

            android:background="@drawable/shape_item_corner"
            android:elevation="@dimen/farm_floating_action_weigh_elevation"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/floating_action_fragment_btn_edit_size"
                android:layout_height="@dimen/floating_action_fragment_btn_edit_size"

                android:layout_marginTop="@dimen/floating_action_fragment_btn_exit_margin_top"
                android:layout_marginEnd="@dimen/floating_action_fragment_btn_exit_margin_end"

                android:background="@drawable/ic_close_menu"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ic_rabbit_label"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginStart="@dimen/standard_margin"

                android:src="@drawable/ic_rabbit_label"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"

                android:text="Кролик"
                android:textColor="@color/black"
                android:textSize="18sp"

                app:layout_constraintTop_toTopOf="@+id/ic_rabbit_label"
                app:layout_constraintStart_toEndOf="@+id/ic_rabbit_label"
                />

            <TextView
                android:id="@+id/txt_rabbit_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"

                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toEndOf="@+id/ic_rabbit_label"
                tools:text="№123123"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"

                android:text="1.81 кг"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintTop_toTopOf="@+id/txt_rabbit_id"
                app:layout_constraintStart_toEndOf="@+id/txt_rabbit_id"
                app:layout_constraintBottom_toBottomOf="@+id/txt_rabbit_id"/>

            <ImageView
                android:id="@+id/ic_rabbit_gender"
                android:layout_width="12dp"
                android:layout_height="12dp"

                android:layout_marginStart="10dp"

                android:src="@drawable/ic_rabbit_gender_man"

                app:layout_constraintBottom_toBottomOf="@+id/title"
                app:layout_constraintStart_toEndOf="@+id/title"
                app:layout_constraintTop_toTopOf="@+id/title" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"

                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginStart="40dp"

                android:src="@drawable/ic_btn_weigh"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ic_rabbit_gender"/>

            <TextView
                android:id="@+id/txt_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginStart="@dimen/standard_margin"

                android:text="Дата рождения: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/ic_rabbit_label"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/standard_margin"

                android:text="Возраст: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/txt_birthday"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_marginTop="60dp"
                android:layout_marginEnd="@dimen/standard_margin"

                android:background="@null"
                android:src="@drawable/ic_btn_change_type"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginHorizontal="@dimen/standard_margin"

                android:text="Тип: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toBottomOf="@+id/txt_age"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_count_of_pins"/>
            <TextView
                android:id="@+id/txt_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/standard_margin"

                android:text="Порода: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toBottomOf="@+id/txt_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_average_pins"/>
            <TextView
                android:id="@+id/txt_number_of_cage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/standard_margin"

                android:text="№ клетки: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toBottomOf="@+id/txt_breed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_status"/>

            <TextView
                android:id="@+id/txt_count_of_pins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginHorizontal="@dimen/standard_margin"

                android:text="Кол-во выводов: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/txt_age"
                app:layout_constraintStart_toEndOf="@+id/txt_type"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/txt_average_pins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/standard_margin"

                android:text="Средний вывод: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/txt_count_of_pins"
                app:layout_constraintStart_toEndOf="@+id/txt_breed"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="@dimen/standard_margin"

                android:text="Статус: %s"
                android:textSize="@dimen/standard_txt_size"
                android:textColor="@color/black"

                app:layout_constraintTop_toBottomOf="@+id/txt_average_pins"
                app:layout_constraintStart_toEndOf="@+id/txt_number_of_cage"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"

                android:background="@drawable/shape_item_corner"
                android:elevation="@dimen/farm_floating_action_weigh_input_area_elevation"

                app:layout_constraintTop_toBottomOf="@id/txt_number_of_cage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/txt_history_of_operation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"

                    android:text="История операций"
                    android:textColor="@color/black"
                    android:textSize="@dimen/farm_floating_action_weigh_txt_size"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    style="?android:attr/borderlessButtonStyle"

                    android:layout_width="11dp"
                    android:layout_height="6dp"

                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="12dp"

                    android:src="@drawable/ic_btn_to_top"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/history_of_operation_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"

                    android:layout_marginBottom="5dp"

                    android:layout_weight="2"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_history_of_operation" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>