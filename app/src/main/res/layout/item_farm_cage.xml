<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:background="@drawable/shape_item_corner"
        android:elevation="@dimen/farm_item_cage_elevation"

        android:layout_marginHorizontal="@dimen/standard_margin"
        android:layout_marginVertical="@dimen/farm_item_cage_margin_vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_cage_label"
            android:layout_width="@dimen/farm_item_cage_label_size"
            android:layout_height="@dimen/farm_item_cage_label_size"

            android:src="@drawable/ic_cage_label"

            android:layout_marginStart="@dimen/farm_item_cage_margin_start_end"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/str_number_of_farm"
            android:layout_width="30dp"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_txt_size"
            android:textColor="@color/black"

            android:layout_marginStart="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_cage_label"

            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="20" />

        <TextView
            android:id="@+id/str_number"
            android:layout_width="@dimen/farm_item_cage_txt_width"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_txt_size"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/str_number_of_farm"
            app:layout_constraintEnd_toStartOf="@+id/str_type_of_cage"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="135"/>

        <TextView
            android:id="@+id/str_type_of_cage"
            android:layout_width="@dimen/farm_item_cage_txt_width"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_txt_size"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/str_number"
            app:layout_constraintEnd_toStartOf="@+id/str_status_of_cage"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="MAT 1"/>

        <TextView
            android:id="@+id/str_status_of_cage"
            android:layout_width="@dimen/farm_item_cage_txt_width"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_txt_size"
            android:textColor="@color/black"

            android:layout_marginEnd="@dimen/farm_item_cage_margin_start_end"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="Уб., Рем."/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>