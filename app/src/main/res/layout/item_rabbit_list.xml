<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/item_background"
        android:elevation="30dp"

        android:layout_marginHorizontal="@dimen/standard_margin"
        android:layout_marginVertical="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/ch_is_current_task_done"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginStart="5dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/str_number_of_cage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            android:layout_marginStart="10dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ch_is_current_task_done"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="113Б" />

        <TextView
            android:id="@+id/str_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/str_number_of_cage"
            app:layout_constraintEnd_toStartOf="@+id/gender"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="48 дн."/>

        <ImageView
            android:id="@+id/gender"
            android:layout_width="18dp"
            android:layout_height="18dp"

            android:background="@drawable/ic_rabbit_sex_man"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/str_age"
            app:layout_constraintEnd_toStartOf="@+id/str_type"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/img_gender" />

        <TextView
            android:id="@+id/str_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            android:layout_marginVertical="10dp"
            android:layout_marginEnd="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="ОТКОРМ"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>