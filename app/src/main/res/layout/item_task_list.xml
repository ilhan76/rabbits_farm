<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/task_item_background"
        android:elevation="30dp"

        android:layout_marginHorizontal="@dimen/standard_margin"
        android:layout_marginVertical="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/ch_is_current_task_done"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginStart="5dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/str_data_of_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            android:layout_marginStart="10dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ch_is_current_task_done"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="11.01.2021" />

        <TextView
            android:id="@+id/str_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/str_data_of_task"
            app:layout_constraintEnd_toEndOf="@+id/count_of_completed_tasks"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="Убой"/>


        <TextView
            android:id="@+id/count_of_completed_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            android:layout_marginVertical="10dp"
            android:layout_marginEnd="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/str_from"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="0"/>
        <TextView
            android:id="@+id/str_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/str_for"
            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            android:layout_marginVertical="10dp"
            android:layout_marginEnd="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/total_tasks"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/total_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/standard_text_size"
            android:textColor="@color/black"

            android:layout_marginVertical="10dp"
            android:layout_marginEnd="15dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            tools:text="512"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>